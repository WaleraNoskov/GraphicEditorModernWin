<?xml version="1.0" encoding="utf-8" ?>
<UserControl
	x:Class="GraphicEditorModernWin.Feature.Drawing.Views.RenderLayerControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:GraphicEditorModernWin.Feature.Drawing.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewmodel="using:GraphicEditorModernWin.Feature.Drawing.ViewModel"
	d:DataContext="{d:DesignInstance viewmodel:RenderLayerViewModel}"
	DataContextChanged="UserControl_DataContextChanged"
	mc:Ignorable="d">

	<Grid>
		<Border
			x:Name="CanvasBorder"
			BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
			BorderThickness="1" />
		<canvas:CanvasControl
			x:Name="DrawingCanvas"
			ClearColor="Transparent"
			Draw="DrawingCanvas_Draw"
			PointerExited="DrawingCanvas_PointerExited"
			PointerMoved="DrawingCanvas_PointerMoved"
			PointerPressed="DrawingCanvas_PointerPressed"
			PointerReleased="DrawingCanvas_PointerReleased" />
	</Grid>
</UserControl>
