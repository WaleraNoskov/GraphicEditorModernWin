<?xml version="1.0" encoding="utf-8" ?>
<UserControl
	x:Class="GraphicEditorModernWin.Feature.Drawing.Views.RenderWidget"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
	xmlns:local="using:GraphicEditorModernWin.Feature.Drawing.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewmodel="using:GraphicEditorModernWin.Feature.Drawing.ViewModel"
	d:DataContext="{d:DesignInstance viewmodel:RenderViewModel}"
	mc:Ignorable="d">
	<interactivity:Interaction.Behaviors>
		<interactivity:EventTriggerBehavior EventName="Loaded">
			<interactivity:InvokeCommandAction Command="{Binding InitializeCommand}" />
		</interactivity:EventTriggerBehavior>
	</interactivity:Interaction.Behaviors>

	<Grid>
		<ScrollView ZoomMode="Disabled">
			<Grid Name="LayersContainer" />
		</ScrollView>

		<local:ZoomControl
			Margin="0,0,0,16"
			HorizontalAlignment="Center"
			VerticalAlignment="Bottom"
			Command="{Binding SetZoomCommand}"
			Zoom="{Binding Zoom, Mode=OneWay}" />
	</Grid>
</UserControl>
