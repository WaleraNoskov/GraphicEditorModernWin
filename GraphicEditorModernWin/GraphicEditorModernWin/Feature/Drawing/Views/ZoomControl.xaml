<?xml version="1.0" encoding="utf-8" ?>
<UserControl
	x:Class="GraphicEditorModernWin.Feature.Drawing.Views.ZoomControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:GraphicEditorModernWin.Feature.Drawing.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid>
		<Border
			Padding="8"
			Background="{StaticResource CardBackgroundFillColorDefaultBrush}"
			BorderBrush="{StaticResource DividerStrokeColorDefaultBrush}"
			BorderThickness="1"
			CornerRadius="8">

			<StackPanel Orientation="Horizontal">
				<RepeatButton
					Background="Transparent"
					BorderThickness="0"
					Click="DecreaseZoom_Click"
					Delay="100"
					Interval="100">
					<FontIcon FontSize="14" Glyph="&#xE738;" />
				</RepeatButton>
				<TextBlock
					x:Name="ZoomTextBlock"
					Margin="8,0"
					VerticalAlignment="Center"
					Text="100 %" />
				<Button Click="IncreaseZoom_Click" Style="{StaticResource SubtleButtonStyle}">
					<FontIcon FontSize="14" Glyph="&#xE710;" />
				</Button>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
