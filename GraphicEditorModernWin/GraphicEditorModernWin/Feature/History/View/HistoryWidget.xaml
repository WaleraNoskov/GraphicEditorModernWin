<?xml version="1.0" encoding="utf-8" ?>
<UserControl
	x:Class="GraphicEditorModernWin.Feature.History.View.HistoryWidget"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
	xmlns:local="using:GraphicEditorModernWin.Feature.History.View"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewModels="using:GraphicEditorModernWin.Feature.History.ViewModel"
	d:DataContext="{d:DesignInstance viewModels:HistoryViewModel}"
	mc:Ignorable="d">

	<interactivity:Interaction.Behaviors>
		<interactivity:EventTriggerBehavior EventName="Loaded">
			<interactivity:InvokeCommandAction Command="{Binding InitializeCommand}" />
		</interactivity:EventTriggerBehavior>
	</interactivity:Interaction.Behaviors>

	<Border
		Padding="24,0"
		Background="{StaticResource CardBackgroundFillColorDefaultBrush}"
		BorderBrush="{StaticResource DividerStrokeColorDefaultBrush}"
		BorderThickness="1"
		CornerRadius="8">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<TextBlock
				Margin="0,32,0,24"
				Style="{StaticResource SubtitleTextBlockStyle}"
				Text="История" />

			<ScrollViewer
				Grid.Row="1"
				HorizontalScrollBarVisibility="Hidden"
				VerticalScrollBarVisibility="Auto">
				<ListView Margin="0,0,0,16" ItemsSource="{Binding HistoryEntries, Mode=OneWay}">
					<ListView.ItemTemplate>
						<DataTemplate x:DataType="viewModels:HistoryEntryViewModel">
							<TextBlock x:Phase="1" Text="{x:Bind Name}" />
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</ScrollViewer>

			<CommandBar
				Grid.Row="2"
				Margin="0,0,0,24"
				DefaultLabelPosition="Collapsed">
				<CommandBar.PrimaryCommands>
					<AppBarButton
						Command="{Binding UndoCommand}"
						Icon="Undo"
						Label="Undo" />
				</CommandBar.PrimaryCommands>
			</CommandBar>
		</Grid>
	</Border>
</UserControl>
