<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="GraphicEditorModernWin.Pages.EditorPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:colorPaletteWidget="using:GraphicEditorModernWin.Feature.ColorPalete.Views"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:drawingWidget="using:GraphicEditorModernWin.Feature.Drawing.Views"
	xmlns:layersWidget="using:GraphicEditorModernWin.Feature.Layers.Views"
	xmlns:local="using:GraphicEditorModernWin.Pages"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="280" />
			<ColumnDefinition />
			<ColumnDefinition Width="280" />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<drawingWidget:RenderWidget Grid.RowSpan="2" Grid.ColumnSpan="3" />

		<colorPaletteWidget:ColorPaletteWidget
			Grid.Row="1"
			Margin="16,0,0,16"
			VerticalAlignment="Bottom" />

		<layersWidget:LayersWidget
			Grid.Row="1"
			Grid.Column="2"
			Margin="0,0,16,16"
			VerticalAlignment="Bottom" />
	</Grid>
</Page>
